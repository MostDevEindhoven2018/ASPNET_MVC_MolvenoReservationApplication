                <label asp-for="_guestName" class="control-label"></label>
                <input asp-for="_guestName" class="form-control" />
                <span asp-validation-for="_guestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_guestPhone" class="control-label"></label>
                <input asp-for="_guestPhone" class="form-control" />
                <span asp-validation-for="_guestPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_guestEmail" class="control-label"></label>
                <input asp-for="_guestEmail" class="form-control" />
                <span asp-validation-for="_guestEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
