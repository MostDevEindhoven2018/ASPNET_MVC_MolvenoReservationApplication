                    <option value="23">23</option>
                </select>
                <span asp-validation-for="_resDurationHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentageMaxCapacity" class="control-label">Percentage possible to reserve of max capacity tables</label>
                <select asp-for="PercentageMaxCapacity" class="form-control-static combobox" type="number">
                    <option disabled selected hidden></option>  @*Added this option so when you start you don't see 12:00, but you cannot select it (hidden)*@
