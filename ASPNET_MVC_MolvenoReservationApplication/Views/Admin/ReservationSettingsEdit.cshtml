                    <option value="23">23</option>
                </select>
                <span asp-validation-for="ClosingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_resDurationHour" class="control-label">Duration of reservations</label>
                <select asp-for="_resDurationHour" class="form-control-static combobox" type="number">
                    <option disabled selected hidden></option>  @*Added this option so when you start you don't see 12:00, but you cannot select it (hidden)*@
