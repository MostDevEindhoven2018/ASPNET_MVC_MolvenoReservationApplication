@model IEnumerable<ASPNET_MVC_MolvenoReservationApplication.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h2>Table Overview</h2>

<p>
    <a asp-controller="Admin" asp-action="Index">Admin homepage</a>
</p>
<p>
    <a asp-action="Create">Create New Table</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model._tableCapacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._tableArea)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._tableCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._tableArea)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TableID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TableID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TableID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
